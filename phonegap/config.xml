<?xml version='1.0' encoding='utf-8'?>
<widget id="ru.vmp.online" version="1.1.0" xmlns="http://www.w3.org/ns/widgets" xmlns:gap="http://phonegap.com/ns/1.0">
    <name>Vector Online</name>
    <description>
      Vector Online iOS client
    </description>
    <author email="mbektimirov@vmp.ru" href="http://vmp.ru">
      Vector Team
    </author>
    <feature name="debug-server" required="true">
        <param name="domain" value="http://localhost:8080" />
        <param name="key" value="vector-online" />
    </feature>
    <content src="index_cordova.html" />
    <preference name="permissions" value="none" />
    <preference name="orientation" value="default" />
    <preference name="target-device" value="universal" />
    <preference name="fullscreen" value="false" />

    <preference name="webviewbounce" value="false" />
    <preference name="DisallowOverscroll" value="true" />
    <preference name="disallowOverscroll" value="true" />
    <preference name="UIWebViewBounce" value="false" />

    <preference name="StatusBarOverlaysWebView" value="false" />
    <preference name="StatusBarStyle" value="black" />
    <preference name="StatusBarBackgroundColor" value="#f8f8f8" />

    <preference name="SplashScreen" value="screen" />
    <preference name="SplashScreenDelay" value="10000" />

    <preference name="prerendered-icon" value="true" />
    <preference name="stay-in-webview" value="false" />
    <!-- <preference name="ios-statusbarstyle" value="black-translucent" /> -->
    <preference name="detect-data-types" value="true" />
    <preference name="exit-on-suspend" value="false" />
    <preference name="show-splash-screen-spinner" value="true" />
    <preference name="auto-hide-splash-screen" value="true" />
    <preference name="disable-cursor" value="false" />

    <gap:plugin name="org.apache.cordova.network-information" />
    <gap:plugin name="org.apache.cordova.console" />
    <gap:plugin name="org.apache.cordova.statusbar" />
    <gap:plugin name="org.apache.cordova.inappbrowser" />
    <gap:plugin name="org.apache.cordova.splashscreen" />


    <platform name="ios">
      <!--
        identify -format "<icon width=\"%w\" height=\"%h\" src=\"res/icon/ios/%f\" />\n" *
      -->
      <icon width="60" height="60" src="res/icon/ios/Icon-60.png" />
      <icon width="120" height="120" src="res/icon/ios/Icon-60@2x.png" />
      <icon width="180" height="180" src="res/icon/ios/Icon-60@3x.png" />
      <icon width="72" height="72" src="res/icon/ios/Icon-72.png" />
      <icon width="144" height="144" src="res/icon/ios/Icon-72@2x.png" />
      <icon width="76" height="76" src="res/icon/ios/Icon-76.png" />
      <icon width="152" height="152" src="res/icon/ios/Icon-76@2x.png" />
      <icon width="40" height="40" src="res/icon/ios/Icon-Small-40.png" />
      <icon width="80" height="80" src="res/icon/ios/Icon-Small-40@2x.png" />
      <icon width="50" height="50" src="res/icon/ios/Icon-Small-50.png" />
      <icon width="100" height="100" src="res/icon/ios/Icon-Small-50@2x.png" />
      <icon width="29" height="29" src="res/icon/ios/Icon-Small.png" />
      <icon width="58" height="58" src="res/icon/ios/Icon-Small@2x.png" />
      <icon width="87" height="87" src="res/icon/ios/Icon-Small@3x.png" />
      <icon width="57" height="57" src="res/icon/ios/Icon.png" />
      <icon width="114" height="114" src="res/icon/ios/Icon@2x.png" />

      <!--
        identify -format "<splash width=\"%w\" height=\"%h\" src=\"res/screen/ios/%f\" />\n" *
      -->
      <splash width="640" height="1136" src="res/screen/ios/Default-568h@2x.png" />
      <splash width="750" height="1334" src="res/screen/ios/Default-667h@2x.png" />
      <splash width="2208" height="1242" src="res/screen/ios/Default-Landscape-736h@3x.png" />
      <splash width="1024" height="768" src="res/screen/ios/Default-Landscape.png" />
      <splash width="2048" height="1536" src="res/screen/ios/Default-Landscape@2x.png" />
      <splash width="1242" height="2208" src="res/screen/ios/Default-Portrait-736h@3x.png" />
      <splash width="768" height="1024" src="res/screen/ios/Default-Portrait.png" />
      <splash width="1536" height="2048" src="res/screen/ios/Default-Portrait@2x.png" />
      <splash width="320" height="480" src="res/screen/ios/Default.png" />
      <splash width="640" height="960" src="res/screen/ios/Default@2x.png" />
    </platform>


    <access origin="*" />
</widget>
